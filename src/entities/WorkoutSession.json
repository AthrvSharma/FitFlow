{
  "name": "WorkoutSession",
  "type": "object",
  "properties": {
    "workout_name": {
      "type": "string",
      "description": "Name of the workout"
    },
    "workout_type": {
      "type": "string",
      "enum": [
        "strength",
        "cardio",
        "flexibility",
        "sports",
        "other"
      ],
      "description": "Type of workout"
    },
    "duration_minutes": {
      "type": "number",
      "description": "Duration in minutes"
    },
    "calories_burned": {
      "type": "number",
      "description": "Estimated calories burned"
    },
    "exercises": {
      "type": "array",
      "description": "List of exercises performed",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "sets": {
            "type": "number"
          },
          "reps": {
            "type": "number"
          },
          "weight": {
            "type": "number"
          },
          "rpe": {
            "type": "number",
            "description": "Rate of Perceived Exertion (1-10)"
          },
          "rest_seconds": {
            "type": "number"
          },
          "notes": {
            "type": "string"
          }
        }
      }
    },
    "notes": {
      "type": "string",
      "description": "Session notes"
    },
    "date": {
      "type": "string",
      "format": "date",
      "description": "Date of workout"
    },
    "overall_rpe": {
      "type": "number",
      "description": "Overall session difficulty (1-10)"
    },
    "energy_level": {
      "type": "string",
      "enum": [
        "low",
        "moderate",
        "high"
      ],
      "description": "Energy level during workout"
    },
    "shared_with_buddies": {
      "type": "boolean",
      "default": false,
      "description": "Shared with workout buddies"
    }
  },
  "required": [
    "workout_name",
    "date"
  ]
}