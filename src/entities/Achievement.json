{
  "name": "Achievement",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Achievement title"
    },
    "description": {
      "type": "string",
      "description": "Achievement description"
    },
    "type": {
      "type": "string",
      "enum": [
        "workout",
        "nutrition",
        "streak",
        "milestone",
        "challenge"
      ],
      "description": "Achievement type"
    },
    "icon": {
      "type": "string",
      "description": "Icon name"
    },
    "unlocked": {
      "type": "boolean",
      "default": false,
      "description": "Whether achievement is unlocked"
    },
    "unlocked_date": {
      "type": "string",
      "format": "date-time",
      "description": "When achievement was unlocked"
    },
    "progress": {
      "type": "number",
      "description": "Progress towards achievement (0-100)"
    }
  },
  "required": [
    "title",
    "type"
  ]
}